<h1><%= @pirate_ship.name %> Crew Members</h1>

<%= link_to 'New Crew Member', new_pirate_ship_crew_member_path(@pirate_ship), style: 'display: block; margin-bottom: 20px;' %>
<%= link_to 'Sort by Name', pirate_ship_crew_members_path(@pirate_ship, sort: 'name') %>


<table id="table">
  <thead>
    <tr>
      <th>Edit Crew</th>
      <th>Name</th>
      <th>Age</th>
      <th>Role</th>
      <th>Active?</th>
    </tr>
  </thead>
  <tbody>
    <% @crew_members.each do |crew_member| %>
      <tr>
        <td><%= link_to 'Edit', edit_pirate_ship_crew_member_path(@pirate_ship, crew_member) %></td>
        <td><%= link_to crew_member.name, pirate_ship_crew_member_path(@pirate_ship, crew_member) %></td>
        <td><%= crew_member.age %></td>
        <td><%= crew_member.role %></td>
        <td><%= crew_member.active %></td>
      </tr>
    <% end %>
  </tbody>
</table>