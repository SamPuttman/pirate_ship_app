<h1>All Crew Members</h1>

<table id="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Role</th>
      <th>Active?</th>
      <th>Assigned Ship</th>
    </tr>
  </thead>
  <tbody>
    <% @crew_members.each do |crew_member| %>
      <tr>
        <td><%= link_to crew_member.name, pirate_ship_crew_member_path(crew_member.pirate_ship, crew_member) %></td>
        <td><%= crew_member.age %></td>
        <td><%= crew_member.role %></td>
        <td><%= crew_member.active %></td>
        <td><%= link_to crew_member.pirate_ship.name, pirate_ship_path(crew_member.pirate_ship) %></td>
      </tr>
    <% end %>
  </tbody>
</table>